---
import { education, experience } from "../data/timelineData";
import Timeline from "./Timeline.astro";
import TimelineItem from "./TimelineItem.astro";
import BriefcaseIcon from "./icons/Briefcase.astro";
import EducationIcon from "./icons/Education.astro";
---

<div class="py-20 xl:px-6">
  <h2
    class="relative text-3xl font-bold text-white pb-4
             after:content-[''] after:absolute after:bottom-0 after:left-0
             after:w-20 after:h-1.5 after:bg-emerald-500 after:rounded-full"
  >
    Trayectoria Profesional
  </h2>

  <div class="grid lg:grid-cols-2 gap-16">
    <!-- SECCIÓN EXPERIENCIA -->
    <div class="flex flex-col">
      <Timeline title="Experiencia">
        <BriefcaseIcon slot="icon" class="text-emerald-500 size-6" />
        {experience.map((item) => <TimelineItem {...item} />)}
      </Timeline>
    </div>

    <!-- SECCIÓN EDUCACIÓN -->
    <div class="flex flex-col">
      <Timeline title="Educación">
        <EducationIcon slot="icon" class="text-emerald-500 size-6" />
        {education.map((item) => <TimelineItem {...item} />)}
      </Timeline>
    </div>
  </div>
</div>
