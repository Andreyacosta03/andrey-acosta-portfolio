---
interface Props {
  title: string;
  url: string;
  label: string;
}

const { title, url, label } = Astro.props;
const isContact = title === "Contacto";
---

<a
  aria-label={label}
  href={url}
  class:list={[
    "transition-all",
    isContact
      ? "bg-white/10 px-4 py-2 rounded-full text-white hover:bg-emerald-500 hover:text-black border border-white/10"
      : "text-gray-400 hover:text-emerald-400 text-sm font-medium",
  ]}
>
  {title}
</a>
