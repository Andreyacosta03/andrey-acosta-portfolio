---
interface Props {
  title: string;
  company: string;
  date: string;
  description?: string;
  tags?: string[];
}

const { title, company, date, description, tags } = Astro.props;
---

<div class="relative pl-8 group">
  <div
    class="absolute -left-2.25 top-1 w-4 h-4 rounded-full bg-neutral-950 border-2 border-emerald-500 group-hover:bg-emerald-500 transition-all duration-300 shadow-[0_0_10px_rgba(16,185,129,0.3)]"
  >
  </div>

  <div class="mb-1">
    <span
      class="text-emerald-500 font-mono text-xs font-bold uppercase tracking-wider"
      >{date}</span
    >
    <h4
      class="text-lg md:text-xl font-bold text-white group-hover:text-emerald-400 transition-colors"
    >
      {title}
    </h4>
    <p class="text-base sm:text-lg text-gray-400 font-medium italic">
      {company}
    </p>
  </div>

  {
    description && (
      <p class="text-gray-500 text-sm sm:text-base leading-relaxed mb-4">
        {description}
      </p>
    )
  }

  <div class="flex flex-wrap gap-2">
    {
      tags &&
        tags.map((tag) => (
          <span class="text-[10px] bg-neutral-900 text-gray-400 px-2 py-1 rounded border border-white/5 uppercase">
            {tag}
          </span>
        ))
    }
  </div>
</div>
