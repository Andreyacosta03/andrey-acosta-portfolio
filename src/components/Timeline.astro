---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<div class="flex items-center gap-4 mb-10 mt-16">
  <div class="p-2 bg-emerald-500/10 rounded-lg">
    <slot name="icon" />
  </div>
  <h3 class="text-xl md:text-2xl font-bold text-white">{title}</h3>
</div>

<div class="relative border-l-2 border-neutral-800 ml-4 space-y-12">
  <slot />
</div>
